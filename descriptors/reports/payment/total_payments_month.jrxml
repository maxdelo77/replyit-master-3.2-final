		<parameter name="startDate" class="java.util.Date"/>
		<parameter name="endDate" class="java.util.Date"/>
		<queryString>
			<![CDATA[select
	            sum(p.amount) as amount,
	            to_char(p.payment_date, 'MM') as month_of_year,
	            to_char(p.payment_date, 'Month') as month,
	            to_char(p.payment_date, 'yyyy') as year
            from
	            payment p
	            inner join base_user u on p.user_id = u.id
            where
	            u.entity_id = $P{entityId}
	            and p.deleted = 0
	            and p.is_preauth = 0
	            and p.result_id in (1, 4)
	            and p.payment_date >= $P{startDate}
	            and p.payment_date <= $P{endDate}
            group by month_of_year, month, year
            order by year, month_of_year]]>
		</queryString>
		<field name="amount" class="java.math.BigDecimal"/>
		<field name="month_of_year" class="java.lang.String"/>
		<field name="month" class="java.lang.String"/>
		<field name="year" class="java.lang.String"/>
	</subDataset>
	<parameter name="entityId" class="java.lang.Integer"/>
	<parameter name="startDate" class="java.util.Date"/>
	<parameter name="endDate" class="java.util.Date"/>
	<queryString>
		<![CDATA[select
	        sum(p.amount) as amount,
	        count(p.id) as payment_count,
	        to_char(p.payment_date, 'MM') as month_of_year,
	        to_char(p.payment_date, 'Month') as month,
	        to_char(p.payment_date, 'yyyy') as year
        from
	        payment p
	        inner join base_user u on p.user_id = u.id
        where
	        u.entity_id = $P{entityId}
	        and p.deleted = 0
	        and p.is_preauth = 0      -- ignore pre-authorizations
	        and p.result_id in (1, 4) -- successful or entered
	        and p.payment_date >= $P{startDate}
	        and p.payment_date <= $P{endDate}
        group by month_of_year, month, year
        order by year, month_of_year]]>
	</queryString>
